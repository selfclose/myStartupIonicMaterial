ion-side-menus(enable-menu-with-back-views='true')
    ion-side-menu-content
        ion-nav-bar.bar-assertive-900(ng-class="{expanded: isExpanded, 'has-header-fab-left': hasHeaderFabLeft, 'has-header-fab-right': hasHeaderFabRight}", align-title='left')
            ion-nav-back-button.no-text
            ion-nav-buttons(side='right')
                button.button.button-icon.button-clear.ion-android-more-vertical(menu-toggle='right')
        ion-nav-view(name='fabContent')
        ion-nav-view(name='menuContent', ng-class='{expanded: isExpanded}')
    ion-side-menu(side='right')
        ion-header-bar.dark-bg.expanded
            span.avatar(style="background: url('img/crown.jpg'); background-size: cover;")
            h2 Thronester
        ion-content.stable-bg.has-expanded-header
            ion-list
                ion-item(nav-clear='', menu-close='', ui-sref='app.activity')
                    | Activity
                ion-item(nav-clear='', menu-close='', ui-sref='app.login')
                    | Login
                ion-item(nav-clear='', menu-close='', ui-sref='app.profile')
                    | Profile
                ion-item(nav-clear='', menu-close='', ui-sref='app.friends')
                    | Friends
                ion-item(nav-clear='', menu-close='', ui-sref='app.gallery')
                    | Gallery
